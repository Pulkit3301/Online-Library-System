extends base

block content
  main.main
    .card-container
        each book in books
            .card
                .card__header
                    .card__picture
                        .card__picture-overlay &nbsp;
                        img.card__picture-img(src='../public/static/book1.jpg', alt='Book 1')
                    h3.heading-tertirary
                        span=book.title

                .card__details
                    h4.card__sub-heading=book.author
                    p.card__text=book.description

                .card__footer
                    a.btn.btn--green.btn--small(href=`/book/${book.title}`) Details